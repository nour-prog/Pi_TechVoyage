    {% for i in tabUser %}
        <tr>
            <td>{{i.id}}</td>
            <td>{{i.nom}}</td>
            <td>{{i.prenom}}</td>
            <td>{{i.getNumTel}}</td>
            <td>{{i.email}}</td>
            <td>{{i.roles[0]}}</td>
            <td>{{i.password}}</td>
            <td>{{i.isVerified}}</td>
            <td>
                <a href = "{{ path('app_deleteUser', { id: i.id }) }}"> Delete </a>
                <a href = "{{ path('app_UpdateUser', { id: i.id }) }}"> Edit </a>
            </td>
        </tr>
        
    {% endfor %}
</table>
