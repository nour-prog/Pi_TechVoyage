{% extends 'backoffice/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{{form_start(formulaireUser,{'attr': {'novalidate': 'novalidate'}})}}
<br>
<br>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">


<title>profile edit data and skills - Bootdey.com</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style type="text/css">
    	body{
    background: #f7f7ff;
    margin-top:20px;
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid transparent;
    border-radius: .25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
}
.me-2 {
    margin-right: .5rem!important;
}
    </style>
</head>
<body>
<div class="col-lg-8">
<div class="card">
<div class="card-body">
<div class="row mb-3">
<div class="col-sm-3">
<h6 class="mb-0">Nom</h6>
</div>
<div class="col-sm-9 text-secondary">
    {{ form_widget(formulaireUser.nom,{'attr': {'class': 'form-control'}}) }}
    <div class="text-danger">
      {{ form_errors(formulaireUser.nom) }}
    </div>
</div>
</div>

<div class="row mb-3">
<div class="col-sm-3">
<h6 class="mb-0">Prenom</h6>
</div>
<div class="col-sm-9 text-secondary">
    {{ form_widget(formulaireUser.prenom,{'attr': {'class': 'form-control'}}) }}
    <div class="text-danger">
      {{ form_errors(formulaireUser.prenom) }}
    </div>
</div>
</div>


<div class="row mb-3">
<div class="col-sm-3">
<h6 class="mb-0">Email</h6>
</div>
<div class="col-sm-9 text-secondary">
    {{ form_widget(formulaireUser.email,{'attr': {'class': 'form-control'}}) }}
    <div class="text-danger">
      {{ form_errors(formulaireUser.email) }}
    </div>
</div>
</div>


<div class="row mb-3">
<div class="col-sm-3">
<h6 class="mb-0">Mobile</h6>
</div>
<div class="col-sm-9 text-secondary">
    {{ form_widget(formulaireUser.num_tel,{'attr': {'class': 'form-control'}}) }}
     <div class="text-danger">
      {{ form_errors(formulaireUser.num_tel) }}
    </div>
</div>
</div>


<div class="row mb-3">
  <div class="col-sm-3">
  <h6 class="mb-0">Confirmation</h6>
  </div>
  <div class="col-sm-9 text-secondary">
      {{ form_widget(formulaireUser.isVerified,{'attr': {'class': 'form-control'}}) }}
      <div class="text-danger">
        {{ form_errors(formulaireUser.isVerified) }}
      </div>
  </div>
  </div>

<div class="row">
<div class="col-sm-3"></div>
<div class="col-sm-9 text-secondary">
{{form_row(formulaireUser.Submit,{'attr': {'class': 'btn btn-primary px-4'}})}}
{{ form_end(formulaireUser) }}
</div>
</div>
</div>
</div>

<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript">
	
</script>
</body>
</html>
