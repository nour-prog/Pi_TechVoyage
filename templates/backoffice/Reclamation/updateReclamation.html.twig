{% extends 'backoffice/base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}

    <style type="text/css">
            body{
        background: #f7f7ff;
    }
    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }
    .me-2 {
        margin-right: .5rem!important;
    }
    </style>

    <div class="col-lg-8">
        <h4>Mettre à jour une réclamation</h4>
        <br>

        {{form_start(formulaireReclamation,{'attr': {'novalidate': 'novalidate'}})}}
        <div class="card">
            <div class="card-body">

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">EstTraite</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        {{ form_widget(formulaireReclamation.estTraite,{'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(formulaireReclamation.estTraite) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 text-secondary">
                        {{form_row(formulaireReclamation.Submit,{'attr': {'class': 'btn btn-primary px-4'}})}}
                    </div>
                </div>

            </div>
        </div>
        {{ form_end(formulaireReclamation) }}
    </div>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <br>
    <br>
    <br>
    <br>
{% endblock %}