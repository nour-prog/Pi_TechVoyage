{% extends 'backoffice/base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}

   <link rel="stylesheet" href="/CRUD/CRUD.css">
   <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
   

   
<div class="container">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-6">
            <h2>Liste des commentaires ({{ tabCommentaire|length }} commentaires)</h2>
          </div>
          
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            
            <th>Nom et Prénom</th>
            <th>Contenu</th>
            <th>Date de creation</th>
            <th>Réclamation</th>
            <th>Actions</th>

        
          </tr>
        </thead>
        <tbody>
            {% for i in tabCommentaire %}
            <tr>
            <td>{{ i.getUser().getPrenom() }} {{ i.getUser().getNom() }}</td>
            <td>{{i.contenu}}</td>
            {% if i.dateCreation is not null %}
                <td>{{ i.dateCreation|date }}</td>
            {% else %}
                <td></td>
            {% endif %}
            <td>{{i.Reclamation}}</td>


             <td>
                 <a href = "{{ path('app_deleteCommentaire_back', { id: i.id }) }} class="delete""> <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i> </a>

                 {% if i.getUser().getId() == UserId %}
                 <a href = "{{ path('app_updateCommentaire_back', { id: i.id }) }} class="edit""> <i class="material-icons" data-toggle="tooltip" >&#xE254;</i> </a>
                 {% endif %}

                 

             </td>
          </tr>
          {% endfor %} 
          <a class="btn btn-primary" href  = "{{ path('add_commentaire_back', { id: reclamation.getId() }) }}"> Ajouter </a>
          <br>

        </tbody>
      </table>
      
    </div>
</div>

  <script src="/CRUD/CRUD.js"></script>

{% endblock %}
