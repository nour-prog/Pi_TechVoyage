{% extends 'backoffice/base.html.twig' %}

{% block body %}
    <h1>Publication index</h1>

    <form action="{{ path('app_publication_indexback') }}" method="GET">
        <div class="mb-3">
            <label for="sort" class="form-label">Sort By:</label>
            <select name="sort" id="sort" class="form-select">
                {% for key, value in sortOptions %}
                    <option value="{{ key }}" {% if key == selectedSort %}selected{% endif %}>{{ value }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="mb-3">
            <label for="searchTerm" class="form-label">Search:</label>
            <input type="text" id="searchTerm" name="searchTerm" value="{{ searchTerm }}" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Apply</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Short Description</th>
                <th>Content</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for publication in publications %}
                <tr>
                    <td>{{ publication.id }}</td>
                    <td>{{ publication.title }}</td>
                    <td>{{ publication.shortDescription }}</td>
                    <td>{{ publication.content }}</td>
                    <td>{{ publication.image }}</td>
                    <td>
                        <a href="{{ path('app_publication_showback', {'id': publication.id}) }}">Show</a>
                        <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">Edit</a>
                        <a href="{{ path('app_publication_show_comments', {'id': publication.id}) }}">Show Comments</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publication_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
