{% extends 'backoffice/base.html.twig' %}

{% block body %}
    <h1>Modifier Publication</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Modifier une Publication</h5>
            <div class="row mb-3">
                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
                <div class="col-sm-10" style="min-width: 500px">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <label for="inputText" class="col-sm-4 col-form-label">Description courte</label>
                <div class="col-sm-10" style="min-width: 500px">
                    {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.shortDescription, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <label for="inputText" class="col-sm-4 col-form-label">Contenu</label>
                <div class="col-sm-10" style="min-width: 500px">
                    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.content, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <!-- Ajoutez des blocs similaires pour les autres champs -->

                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                    {{ form_widget(form.ajouter) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
