{% extends 'frontoffice/base.html.twig' %}

{% block body %}
    <h1>Publication index</h1>

    <div class="row">
        {% for publication in publications %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ asset('your_image_directory/' ~ publication.image) }}" class="card-img-top" alt="{{ publication.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ publication.title }}</h5>
                        <p class="card-text">{{ publication.shortDescription }}</p>
                        <p class="card-text">{{ publication.content }}</p>
                        <form action="{{ path('app_forum_commentaire_new', {'id': publication.id }) }}" method="POST">
                        <input name="content" type="text">
                            <button type="submit">Commenter</button>

                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>No records found</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}
