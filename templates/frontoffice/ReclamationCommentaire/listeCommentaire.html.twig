    <br>
    <h1>Liste de commentaires</h1>

    <table border="1">
        <tr>
            <td>Id</td>
            <td>Contenu</td>
            <td>DateCreation</td>
            <td>RÃ©clamation</td>
            <td>Actions</td>
        </tr>
        {% for commentaire in tabCommentaire %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.contenu }}</td>
                {% if commentaire.dateCreation is not null %}
                    <td>{{ commentaire.dateCreation|date }}</td>
                {% else %}
                    <td></td>
                {% endif %}
                <td>{{ commentaire.reclamation.id }}</td>
                <td>
                    <a href="{{ path('app_deleteCommentaire_front', { id: commentaire.id }) }}"> Supprimer </a>
                    <a href="{{ path('app_updateCommentaire_front', { id: commentaire.id }) }}"> Modifier </a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5">
                <a href="{{ path('add_commentaire_front') }}"> Ajouter </a>
            </td>
        </tr>
    </table>

    <br>
